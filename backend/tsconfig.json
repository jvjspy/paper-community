{
  "compilerOptions": {
    "strict": true,
    "lib": ["es5", "es6", "ESNext.AsyncIterable"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"]
}
